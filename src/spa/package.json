{
  "name": "perfviewjs",
  "productName": "PerfViewJS",
  "version": "0.1.1",
  "private": true,
  "description": "PerfView is a free performance-analysis tool that helps isolate CPU and memory-related performance issues.",
  "author": "https://github.com/microsoft/perfview/graphs/contributors",
  "main": "public/electron.js",
  "build": {
    "appId": "com.microsoft.experiemental.perfviewjs",
    "compression": "maximum",
    "mac": {
      "type": "development",
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "@fluentui/azure-themes": "^8.1.17",
    "@fluentui/react": "^8.16.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@monaco-editor/react": "^4.1.3",
    "@trodi/electron-splashscreen": "^1.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "base64url": "^3.0.1",
    "dayjs": "^1.10.5",
    "electron-is-dev": "^2.0.0",
    "eslint-config-airbnb": "^18.2.1",
    "i18next": "^20.3.1",
    "i18next-chained-backend": "^3.0.2",
    "i18next-http-backend": "^1.2.6",
    "i18next-localstorage-backend": "^3.1.2",
    "image-size": "^1.0.0",
    "monaco-editor": "^0.23.0",
    "node-mac-permissions": "^2.2.0",
    "portscanner": "^2.2.0",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.2",
    "react-grid-system": "^7.2.0",
    "react-hot-toast": "^2.0.0",
    "react-i18next": "^11.10.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "rimraf": "^3.0.2",
    "socket.io": "^4.1.2",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@types/enzyme": "3.10.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/portscanner": "^2.1.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "17.0.5",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "brotli": "^1.3.2",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.0",
    "electron-builder": "^22.10.5",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest-fetch-mock": "3.0.3",
    "ts-jest": "27.0.3",
    "wait-on": "^5.3.0",
    "zlib": "^1.0.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "scripts": {
    "start": "rimraf ./build && react-scripts start",
    "prettier:fix": "prettier --write 'src/**/*.ts(x)'",
    "compress": "node compress.js",
    "build": "react-scripts build",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "lint": "eslint .",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "dist:mac": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps"
  },
  "proxy": "http://localhost:6000",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/reportWebVitals.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@fluentui)/)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
